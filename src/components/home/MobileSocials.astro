        socials.map((item) => (
        <li class="bg-navbg dark:bg-dark-navbg px-4 py-2 text-tcotta dark:text-dark-tcotta border-black dark:border-white border-2 rounded shadow-card-shadow">
            <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
              <div class={`${item.icon} p-6`} />
