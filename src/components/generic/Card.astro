---
interface Props {
  color: string;
  darkColor?: string;
}

const { color, darkColor } = Astro.props;
---

<style define:vars={{ color: color, darkColor: darkColor ?? color }}>
  div.fixed-color-card {
    background-color: var(--color);
    border-radius: 0.5rem;
    border: 2px solid var(--textcolor);
    transition: all 0.5s ease-in-out;
    padding: 1rem;
    color: var(--textcolor);
  }

  div.fixed-color-card:hover {
    filter: drop-shadow(0px 0px 0 rgb(0 0 0 / 1));
  }

  /* Dark mode styles */

  :root.dark div.fixed-color-card {
    background-color: var(--darkColor);
    border-color: var(--textcolor-dark);
    color: var(--textcolor-dark);
  }
</style>

<div class="fixed-color-card">
  <slot />
</div>
