---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import ProjectList from '@components/project/ProjectList.astro';
import Pill from '@components/generic/Pill.astro';
import type { CollectionEntry } from 'astro:content';
import Button from '@components/generic/Button.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('project').then((collection) =>
    collection.reverse()
  );

  const years: string[] = [];
  allPosts.forEach((post) => {
    years.push(post.data.pubDate.getFullYear().toString());
  });

  return Array.from(new Set(years)).map((year) => {
    return {
      params: { year },
      props: {
        year,
        projects: allPosts.filter(
          (post) => post.data.pubDate.getFullYear().toString() === year
        ),
      },
    };
  });
}

interface Props {
  year: string;
  projects: CollectionEntry<'project'>[];
}

const { year, projects } = Astro.props;
---

<Layout
  title={`projects: ${year}`}
  description={`getlar projects | all projects tagged with ${year}`}
  pageTitle={`brutal projects | projects tagged with ${year}`}
>
<main class='bg-bgc p-6'>
  <div class="ml-4">
    <Button color='var(--navbg)' href='/project/'>&larr; Back to projects</Button>
  </div>
    <div class="ml-4 pt-3"><p class='poppins mt-2 color-textcolor font-semibold'>Filtered by Year: <Pill color='var(--navbg)'>{year}</Pill></p>
  </div>
  <ProjectList projects={projects} />
  <div class="h-[4vh] bg-bgc"/>
</main>
</Layout>
