---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import TeachingList from '@components/teaching/TeachingList.astro';
import Pill from '@components/generic/Pill.astro';
import type { CollectionEntry } from 'astro:content';
import Button from '@components/generic/Button.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('project').then((collection) =>
    collection.reverse()
  );

  const years: string[] = [];
  allPosts.forEach((post) => {
    years.push(post.data.pubDate.getFullYear().toString());
  });

  return Array.from(new Set(years)).map((year) => {
    return {
      params: { year },
      props: {
        year,
        teachings: allPosts.filter(
          (post) => post.data.pubDate.getFullYear().toString() === year
        ),
      },
    };
  });
}

interface Props {
  year: string;
  teachings: CollectionEntry<'teaching'>[];
}

const { year, teachings } = Astro.props;
---

<Layout
  title={`teachings: ${year}`}
  description={`tamastheactual teachings | all teachings tagged with ${year}`}
  pageTitle={`tamastheactual teachings | teachings tagged with ${year}`}
>
  <main class='bg-bgcolor dark:bg-dark-bgcolor p-6'>
    <div class="ml-4">
      <Button href="/teaching/" color="var(--bgcolor)" darkColor="var(--bgcolor-dark)">
        Go to teachings &rarr;
      </Button>
    </div>
      <div class="ml-4 pt-3">
        <p class="poppins mt-2 text-textcolor dark:text-dark-textcolor font-semibold">Filtered by Year: 
          <Pill color='var(--navbg)' darkColor='var(--navbg-dark)'>{year}
          </Pill>
        </p>
    </div>
    <TeachingList teachings={teachings} filterHeight={true} />
  </main>
</Layout>
